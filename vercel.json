{
  "functions": {
    "app/api/current-track/route.ts": {
      "maxDuration": 10
    },
    "app/api/update-profile/route.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/update-profile",
      "schedule": "0 0 * * *"
    }
  ],
  "headers": [
    {
      "source": "/:path*\\.(jpg|jpeg|png|gif|webp|svg|pdf)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
